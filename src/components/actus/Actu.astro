---
import type { ActuT2 } from "../../helpers";

interface Props {
  actu: ActuT2;
}
const { actu } = Astro.props;
---

<div class="wrapper">
  <div class="content">
    <div class="title">
      <div class="icons">
        {
          actu.icons?.map((icon, i) => (
            <img loading="lazy" src={icon} alt={actu.auteur[i]} class="icon" />
          ))
        }
      </div>
      <a href={actu.url}>{actu.title}</a>
    </div>
    <img src={actu.image} alt={actu.title} class="mainImg" loading="lazy" />
    <div class="md">
      <actu.content />
    </div>
    {
      actu.source && (
        <a href={actu.source} target="_blank">
          source
        </a>
      )
    }
  </div>
</div>

