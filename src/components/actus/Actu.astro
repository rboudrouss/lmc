<style>
  .wrapper {
    display: flex;
    justify-content: center;
    padding: 30px 0;
    outline: 10px solid black;
  }
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  .icons {
    display: flex;
    gap: 10px;
  }
  .title {
    font-weight: bold;
    font-size: xx-large;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .wrapper {
    width: 100%;
  }

  .content {
    max-width: 1000px;
  }

  .mainImg {
    max-height: 600px;
    max-width: 110%;
    padding: 5px;
  }

  .icon {
    height: 100px;
  }

  @media (max-width: 800px) {
    .mainImg {
      max-width: 80vw;
    }
  }
</style>
