---
interface Props {
  selected?: "infos" | "actus";
}

const links = {
  infos: "/actus/infos",
  actus: "/actus",
}

const {selected = "actus"}: Props = Astro.props;
---

<div class="actus-nav">
  <a href={links.infos} class={selected === "infos" ? "selected" : ""}>Infos</a>
  <a href={links.actus} class={selected === "actus" ? "selected" : ""}>Actus</a>
</div>

<style>
  .actus-nav {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .actus-nav a {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.2rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition: background-color 0.2s ease-in-out;
  }

  .actus-nav a:hover {
    background-color: var(--color-bg);
  }

  .actus-nav a.selected {
    background-color: var(--color-bg);
  }
</style>