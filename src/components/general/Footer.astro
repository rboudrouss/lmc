---
import footerData from "@/data/footer.json";
import { getIconSource } from "@/helpers";
---

<footer>
  <a href=`mailto:${footerData.mail}` class="mail_link">{footerData.mail}</a>
  <ul>
    {
      footerData.links.map((link) => {
        return (
          <li>
            <a
              class="social_link"
              href={link.link}
              target="_blank"
              rel="noreferrer"
            >
              <img src={getIconSource(link.icon)} alt={link.icon} />
            </a>
          </li>
        );
      })
    }
  </ul>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    justify-content: center;

    background-color: #111;
    color: white;
    text-align: center;
    height: 150px;
  }
  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    opacity: 0.7;
  }

  ul {
    list-style: none;
    display: flex;
    justify-content: center;
    margin: 2em 0 0;
    padding: 0;
  }

  li {
    margin: 0 0.5em;
  }

  .social_link {
    padding: 0.5em;
  }

  img {
    filter: invert(1);
  }
</style>
