---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script async defer data-website-id="929b4deb-38df-4cac-944a-632c06c9618b" src="https://stats.rboud.com/umami.js"></script>

    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <meta
      name="description"
      content={description ??
        "Site de l'Association La Matrice Carrée. Médiation Scientifique, Artistique et Historique du Campus Pierre et Marie Curie."}
    />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ??
        "Site de l'Association La Matrice Carrée. Médiation Scientifique, Artistique et Historique du Campus Pierre et Marie Curie."}
    />
    <meta property="og:image" content={image ?? "assets/logo/logo_n.png"} />

  </head>
  <body>
    <slot />
    <style is:global>
      :root {
      }
      body {
        overflow-x: hidden;
      }
      html {
        background-color: #f6f6f6;
        font-family: "Titillium Web", sans-serif;
        scroll-behavior: smooth;
      }
      * {
        box-sizing: border-box;
        margin: 0;
      }
      a {
        max-width: 100%;
        text-decoration: none;
        color: inherit;
      }
    </style>
  </body>
</html>
